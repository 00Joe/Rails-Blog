

<h1><%= @post.title %></h1>
<p><%= @post.description %></p>
<p>
  <%= image_tag(@post.picture_url, :width => 600) if @post.picture.present? %>
</p>

<% if user_signed_in? %>
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Destroy', @idea, data: { confirm: 'Are you sure?' }, method: :delete %> |
<% end %>
<%= link_to 'Back', posts_path %>
